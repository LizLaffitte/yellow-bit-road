<h1>Add A Checkpoint</h1>
<%= has_errors?(@checkpoint) %>
<%= form_for @checkpoint, url: road_checkpoints_path, method: 'post' do |f| %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :road_id, :value => params[:road_id] %>
    <%= f.label "Pick an Existing Course" %><br />
    <%= f.collection_select :course_id, Course.all, :id, :name %><br /><br />


    <%= f.label :goal_date %>
    <br />
    <%= f.date_field :goal_date %><br /><br />
    <%= f.submit %>
<% end %>