<h1>Add <%= @course.name %></h1>
<%= has_errors?(@checkpoint) %>
<p><strong><%= "#{@course.language} | #{@course.difficulty}" %>
<p><%= @course.description %></p>
<%= form_for [@course, @checkpoint] do |f| %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :coursed_id, :value => params[:course_id] %>
    
    <%= f.label :goal_date %>
    <br />
    <%= f.date_field :goal_date %><br /><br />
    <%= f.label "Pick a Road" %><br />
    <%= f.collection_select :road_id, current_user.roads, :id, :name %><br />
    <br />
    <%= f.submit %>
<% end %>
    

