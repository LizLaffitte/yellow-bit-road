
<%= form_tag(courses_path, method: "get") do  %>
    <%= select_tag(:topic, options_for_select(Course.available_topics, params[:topic])) %> 
    <%= submit_tag("Filter") %>
  <% end %>

<ul class="card-display">
<% @courses.each do |course| %>
    <li class="outer-card">
        <div class="card-details blue-top">
            <h2><%= course.name %></h2>
            <div class="topic-holder">
                <div class="topic"><%= course.topic %></div>
                <div class="level diff-<%= course.difficulty %>"><%= course.difficulty %></div>
            </div>
            <p><%= course.description %></p>
            <div>
            <%= link_to "Course Details", course_path(course), class: "btn" %>
            <%= link_to "Add this course", new_course_checkpoint_path(course), class: "btn green-btn" %>
            </div>
        </div>
    </li>
<% end %>
