<%= has_errors?(@course) %>
<%= form_for  @course do |f| %>
    <%= f.label :name %><br />
    <%= f.text_field :name %> <br /><br />
    <%= f.label :description %><br />
    <%= f.text_area :description %> <br /><br />
    <%= f.label :language %><br />
    <%= f.select(:language, options_for_select(Course.language_options)) %> <br /><br />
    <%= f.label :difficulty %><br />
    <%= f.select(:difficulty, options_for_select(Course.difficulty_levels)) %> <br /><br />
    <%= f.label "Link to Course" %><br />
    <%= f.text_field :source_url %><br /><br />
    <%= f.submit %>
<% end %>