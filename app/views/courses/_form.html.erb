<%= has_errors?(@course) %>
<%= form_for  @course do |f| %>
    <%= f.label :name %><br />
    <%= f.text_field :name %> <br /><br />
    <%= f.label :description %><br />
    <%= f.text_area :description %> <br /><br />
    <%= f.label :topic %><br />
    
    <%= f.select(:topic, options_for_select(Course.topic_options), prompt: true) %> <br /><br />
    <%= f.label :difficulty %><br />
    <%= f.select(:difficulty, options_for_select(Course.difficulty_levels), prompt: true) %> <br /><br />
    <%= f.label "Link to Course" %><br />
    <%= f.text_field :source_url %><br /><br />
    <%= f.submit %>
<% end %>