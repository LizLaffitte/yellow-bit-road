<div id="road-map" class="list-card">
<h1><%= @road.name %></h1>
<h3>Goal: <%= formatted_goal_date(@road) %> | <%= days_left(@road) %> days left to meet your goal! </h3>
<% @road.course_topics.each do |topic| %>
    <div class="topic"><%= topic %></div>
    <% end %>


<ul id="checkpoint-list">
<% @road.checkpoints.order(:goal_date).each do |check| %>
    <li>
    <div class="check-details">
        <h3><%= check.course.name %></h3>
        <%= check.course.topic %> | <%= formatted_goal_date(check) %><br />
       
        <p><%= check.course.description %></p>
        
        <%= link_to "Course Details", road_checkpoint_path(@road, check), class: "btn" %>
   </div>
   <div class="check-status">
   <%= form_for [@road, check] do |f| %>
    <%= f.check_box :completed, :class => "toggle", :checked => (false if check.completed) %>
  <% end %>
   </div>
  
   </li>

<% end %>
</ul>
<%= link_to "Add Checkpoint", new_road_checkpoint_path(@road), class: "btn" %> 
<%= is_owner?(@road) %>
</div>
<div id="next-checkpoint" class="list-card">
    <h2>Your Next Step</h2>

</div>