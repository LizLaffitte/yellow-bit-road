<%= form_for @road do |f| %>
    <%= f.hidden_field :user_id, :value => @user.id %>
    <%= f.label :name %>
    <%= f.text_field :name %> <br /><br />
    <%= f.label :goal_date %>
    <%= f.date_field :goal_date %><br /><br />
    <%= f.label :public %>
    <%= f.check_box :public %><br /><br />
    <%= f.submit %>
<% end %>