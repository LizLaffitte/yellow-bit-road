<%= form_for @road, url: user_roads_path(current_user), method: 'post' do |f| %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.label :name %>
    <%= f.text_field :name %> <br /><br />
    <%= f.label :goal_date %>
    <%= f.date_field :goal_date %><br /><br />
    <%= f.label :public %>
    <%= f.check_box :public %><br /><br />
    <%= checkpoints_options(@road, f) %>
    <%= f.submit %>
 <% end %>