<%= form_for @road do |f| %>
    <%= f.hidden_field :user_id, :value => @user.id %>
    <%= f.label :name %>
    <%= f.text_field :name %> <br /><br />
    <%= f.label :goal_date %>
    <%= f.date_field :goal_date %><br /><br />
    <%= f.label :public %>
    <%= f.check_box :public %><br /><br />
    <%= f.label "Choose a Course" %><br />
    <%= f.collection_select :course_ids, Course.all, :id, :name %><br /><br />
    <%= f.label "Add a New Course" %><br />
    <%= f.fields_for :courses, @road.courses.build do |f|  %>
        <%= f.text_field :name %>
    <% end %><br /><br />
    <%= f.submit %>
<% end %>